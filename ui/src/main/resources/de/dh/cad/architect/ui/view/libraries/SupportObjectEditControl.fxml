                     </HBox.margin>
                     <content>
                        <BorderPane>
                           <right>
                              <Button fx:id="mChoosePlanViewImageButton" mnemonicParsing="false" BorderPane.alignment="CENTER">
                                 <graphic>
                                    <ImageView fitHeight="16" fitWidth="16">
                                       <image>
                                          <Image url="@import.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                                 <tooltip>
                                    <Tooltip text="Bild importieren..." />
                                 </tooltip>
                                 <BorderPane.margin>
                                    <Insets left="10.0" />
                                 </BorderPane.margin>
                              </Button>
                           </right>
                           <center>
                              <ImageView fx:id="mPlanViewImageView" fitHeight="200.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
                                 <BorderPane.margin>
                                    <Insets left="20.0" />
                                 </BorderPane.margin>
                              </ImageView>
                           </center>
                        </BorderPane>
                     </content>
                  </TitledPane>
               </children>
            </HBox>
            <Label text="3D-Objekt" wrapText="true" GridPane.rowIndex="8" />
            <TitledPane animated="false" collapsible="false" minHeight="320.0" text="3D-Ansicht" BorderPane.alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.vgrow="ALWAYS">
               <content>
                  <BorderPane fx:id="mThreeDResourcePane">
                     <right>
                        <HBox BorderPane.alignment="CENTER_LEFT">
                           <children>
                              <VBox alignment="CENTER" prefHeight="1000.0" spacing="5.0">
                                 <children>
                                    <Button fx:id="mChooseThreeDObjectButton" mnemonicParsing="false">
                                       <graphic>
                                          <ImageView fitHeight="16" fitWidth="16">
                                             <image>
                                                <Image url="@import.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <tooltip>
                                          <Tooltip text="3D-Modell importieren..." />
                                       </tooltip>
                                    </Button>
                                    <Button fx:id="mTakeSnapshotButton" mnemonicParsing="false">
                                       <graphic>
                                          <ImageView fitHeight="16" fitWidth="16">
                                             <image>
                                                <Image url="@snapshot.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <tooltip>
                                          <Tooltip text="Bilder aus 3D-Modell erzeugen..." />
                                       </tooltip>
                                    </Button>
                                 </children>
                                 <HBox.margin>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </HBox.margin>
                              </VBox>
                              <BorderPane>
                                 <center>
                                    <GridPane alignment="TOP_CENTER">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" />
                                          <ColumnConstraints hgrow="SOMETIMES" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                       </rowConstraints>
                                       <children>
                                          <VBox fx:id="mRotationControlsVBox">
                                             <opaqueInsets>
                                                <Insets bottom="5.0" left="15.0" right="5.0" top="5.0" />
                                             </opaqueInsets>
                                          </VBox>
                                          <VBox fx:id="mSizeControlsVBox" GridPane.columnIndex="1">
                                             <opaqueInsets>
                                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                             </opaqueInsets>
                                          </VBox>
                                       </children>
                                       <padding>
                                          <Insets left="15.0" />
                                       </padding>
                                    </GridPane>
                                 </center>
                                 <bottom>
                                    <Button fx:id="mResetValuesButton" mnemonicParsing="false" text="Werte zurÃ¼cksetzen" BorderPane.alignment="CENTER">
                                       <BorderPane.margin>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </BorderPane.margin>
                                    </Button>
                                 </bottom>
                              </BorderPane>
                           </children>
                        </HBox>
                     </right>
                  </BorderPane>
               </content>
            </TitledPane>
         </children>
      </GridPane>
   </center>
